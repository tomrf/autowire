{
    "name": "tomrf/autowire",
    "type": "library",
    "description": "helps autowire dependency injection from PSR-11 containers",
    "keywords": [ "autowire", "di", "dependency injection", "containers", "psr-11" ],
    "homepage": "http://github.com/tomrf/autowire",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=8",
        "psr/container": "^1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Tomrf\\Autowire\\": "src/"
        }
    },
    "scripts": {
        "cs-fixer": [
            "php-cs-fixer fix --diff --verbose"
        ],
        "phpstan": [
            "phpstan analyze --level 6 src"
        ]
    }
}
