{
    "name": "tomrf/autowire",
    "type": "library",
    "description": "autowire dependency injection from PSR-11 containers",
    "keywords": [ "autowire", "di", "dependency injection", "psr-11", "containers" ],
    "homepage": "http://github.com/tomrf/autowire",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.6",
        "friendsofphp/php-cs-fixer": "^3.8",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Tomrf\\Autowire\\": "src/"
        }
    },
    "scripts": {
        "phpunit": [
            "phpunit --do-not-cache-result"
        ],
        "cs-fixer": [
            "php-cs-fixer fix --allow-risky=yes --diff --verbose src"
        ],
        "phpstan": [
            "phpstan analyze --level max src"
        ]
    }
}
